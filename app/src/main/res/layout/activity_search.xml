<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    SEARCH BAR-->
    <LinearLayout
        android:id="@+id/search_search_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_title_1"
        android:background="@drawable/effect_shadow"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!--        BACK button-->
        <LinearLayout
            android:id="@+id/search_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/left"></ImageView>
        </LinearLayout>

        <EditText
            android:id="@+id/search_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Nhập khách sạn, địa chỉ"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:textSize="14dp"></EditText>
    </LinearLayout>

<!--    ĐỊA ĐIỂM GẦN BẠN-->
    <TextView
        android:id="@+id/search_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="Địa điểm gần bạn"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/search_near_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_search_bar"></TextView>

    <!--    LIST OF NEAR LOCATIONS-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_near_location"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_title_1"
        app:layout_constraintBottom_toTopOf="@+id/search_title_2">

        <!--        NEAR LOCATION ITEM 1-->
        <LinearLayout
            android:id="@+id/near_location_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/near_location_2"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed">

            <!--            LOCATION THUMB-->
            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/thumb_quan_1"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="12dp"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/img_quan_1"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quan_1" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:text="Quận 1"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

        <!--        NEAR LOCATION ITEM 2-->
        <LinearLayout
            android:id="@+id/near_location_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/near_location_1"
            app:layout_constraintRight_toLeftOf="@+id/near_location_3"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/thumb_quan_3"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="12dp"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/img_quan_3"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quan_3" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:text="Quận 3"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

        <!--        NEAR LOCATION ITEM 3-->
        <LinearLayout
            android:id="@+id/near_location_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/near_location_2"
            app:layout_constraintRight_toLeftOf="@+id/near_location_4"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/thumb_quan_4"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="12dp"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/img_quan_4"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quan_4" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:text="Quận 4"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

        <!--        NEAR LOCATION ITEM 4-->
        <LinearLayout
            android:id="@+id/near_location_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/near_location_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/thumb_quan_5"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="12dp"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/img_quan_5"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quan_5" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:text="Quận 5"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

<!--   TÌM KIẾM GẦN ĐÂY-->
    <TextView
        android:id="@+id/search_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_near_location"
        app:layout_constraintBottom_toTopOf="@+id/li_recently_search"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="Tìm kiếm gần đây"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"></TextView>

<!--    LIST RECENTLY SEARCH-->
    <LinearLayout
        android:id="@+id/li_recently_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search_title_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">
<!--        RECENTLY SEARCH RESULT-->

<!--        Result 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_gravity="left"></ImageView>

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="lá hotel"></TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cancel"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_height="1dp"
                android:background="#4A4B4E"></LinearLayout>
        </LinearLayout>

<!--        Result 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_gravity="left"></ImageView>

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="lá hotel"></TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cancel"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_height="1dp"
                android:background="#4A4B4E"></LinearLayout>
        </LinearLayout>

<!--        Result 3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_gravity="left"></ImageView>
                <TextView
                    android:layout_width="288dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="lá hotel"></TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cancel"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_height="1dp"
                android:background="#4A4B4E"></LinearLayout>
        </LinearLayout>

<!--        Result 4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_gravity="left"></ImageView>
                <TextView
                    android:layout_width="288dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="lá hotel"></TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cancel"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_height="1dp"
                android:background="#4A4B4E"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>