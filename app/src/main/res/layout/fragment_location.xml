<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LocationFragment"
    android:id="@+id/li_location">

    <!--    LIST OF NEAR LOCATIONS-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_near_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!--        NEAR LOCATION ITEM 1-->
        <LinearLayout
            android:id="@+id/near_location_1"
            android:layout_width="68dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/near_location_2"
            android:orientation="vertical"
            >

            <!--            LOCATION THUMB-->
            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:elevation="12dp"
                    android:id="@+id/thumb_quan_1"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_height="68dp"
                        android:layout_width="match_parent"
                        android:id="@+id/img_quan_1"
                        android:src="@drawable/quan_1"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:text="Quận 1"></TextView>
        </LinearLayout>

        <!--        NEAR LOCATION ITEM 2-->
        <LinearLayout
            android:id="@+id/near_location_2"
            android:layout_width="68dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/near_location_1"
            app:layout_constraintRight_toLeftOf="@+id/near_location_3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:elevation="12dp"
                    android:id="@+id/thumb_quan_3"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_height="68dp"
                        android:layout_width="match_parent"
                        android:id="@+id/img_quan_3"
                        android:src="@drawable/quan_3"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:text="Quận 3"></TextView>
        </LinearLayout>


        <!--        NEAR LOCATION ITEM 3-->
        <LinearLayout
            android:id="@+id/near_location_3"
            android:layout_width="68dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/near_location_2"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/circle_location_thumb"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:elevation="12dp"
                    android:id="@+id/thumb_quan_4"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_height="68dp"
                        android:layout_width="match_parent"
                        android:id="@+id/img_quan_4"
                        android:src="@drawable/quan_4"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:text="Quận 4"></TextView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>